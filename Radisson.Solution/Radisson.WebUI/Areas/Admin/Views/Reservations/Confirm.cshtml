@model Reservation
@{
    ViewData["Title"] = "Confirm";
}

<h1>Confirm</h1>

<h4>Rezervasiyalar</h4>
<hr />

<div class="page-wrapper">
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <div class="d-inline">
                        <h4>Bootstrap Border Sizes</h4>
                        <span>
                            lorem ipsum dolor sit amet, consectetur adipisicing
                            elit
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                        <li class="breadcrumb-item" style="float: left;">
                            <a asp-controller="Dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                        </li>
                        @if (User.HasAccess("admin.reservations.index"))
                        {
                            <li class="breadcrumb-item" style="float: left;">
                                <a asp-action="index">Rezervasiyalar</a>
                            </li>
                        }
                        <li class="breadcrumb-item" style="float: left;">
                            <span>Create</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Basic Form Inputs</h5>
                        <span>
                            Add class of <code>.form-control</code> with
                            <code>&lt;input&gt;</code> tag
                        </span>


                        <div class="card-header-right">
                            <i class="icofont icofont-spinner-alt-5"></i>
                        </div>

                    </div>
                    <div class="card-block">
                        <h4 class="sub-title">Basic Inputs</h4>

                        <div>
                            <form asp-action="confirm" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group row ">
                                    <label asp-for="CheckIn" class="col-sm-2 col-form-label"></label>
                                    <div class="fix-row">
                                        @Model.CheckIn
                                    </div>
                                </div>
                                <div class="form-group row ">
                                    <label asp-for="CheckOut" class="col-sm-2 col-form-label"></label>
                                    <div class="fix-row">
                                        @Model.CheckOut
                                    </div>
                                </div>
                                <div class="form-group row ">
                                    <label asp-for="RoomTypeId" class="col-sm-2 col-form-label"></label>
                                    <div class="fix-row">
                                        @ViewBag.GetRTName(Convert.ToInt32(Model.RoomTypeId))
                                    </div>
                                </div>
                                <div class="form-group row ">
                                    <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                                    <div class="fix-row">
                                        @Model.Price AZN
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="RoomId" class="control-label"></label>
                                    <select asp-for="RoomId" asp-items="ViewBag.Rooms" class="form-control select2">
                                    </select>
                                    <span asp-validation-for="RoomId" class="text-danger"></span>
                                    <div class="form-group">
                                        <div class="col-12 d-flex justify-content-end">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-12 d-flex justify-content-end">
                                        <input type="submit" value="Save" class="btn btn-primary fix-btn" />
                                        @if (User.HasAccess("admin.reservations.index"))
                                        {
                                            <a asp-action="index" class="btn btn-info">Cancel</a>
                                        }
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>