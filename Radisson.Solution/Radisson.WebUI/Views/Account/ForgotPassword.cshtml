@model RadissonForgotPassword

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Şifrəmi Unutdum</title>

    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <header class="head-form">
        <h2>Şifrəmi Unutdum</h2>
    </header>
    <div class="overlay">
        <form method="post" asp-controller="account" asp-action="forgotpassword">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="con forgotpassword">
                <input class="form-input"
                       id="txt-input"
                       asp-for="Email"
                       type="text"
                       placeholder="Email"
                       autocomplete="off"
                       required />

                <button type="submit">
                    Şifrəmi Yenilə
                </button>
            </div>
        </form>
    </div>
</body>

</html>
