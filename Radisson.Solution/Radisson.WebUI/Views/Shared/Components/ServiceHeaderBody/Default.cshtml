@model ServiceHeaderBodyModel

<!-- service-section -->
<section class="service-section sec-pad">
    <div class="container">
        <div class="top-title">
            <div class="sec-title">Our Services</div>
            <div class="title-text">Excepteur sint occaecat cupidatat</div>
        </div>
        <div class="custom-tab-title">
            <ul class="tab-title clearfix">
                @foreach (var item in Model.ServicesHeaders)
                {
                    <li class="@(item == Model.ServicesHeaders.First() ? "active" : "")">
                        <div class="single-btn">
                            <a class="@(item == Model.ServicesHeaders.First() ? "active" : "")" data-toggle="tab" href="#@item.Id">
                                <div class="icon-box"></div>
                                <div class="text">@item.Title</div>
                            </a>
                        </div>
                    </li>
                }
            </ul>
        </div>
        <div class="tab-details-content">
            @foreach (var header in Model.ServicesHeaders)
            {
                <div class="tab-content @(header == Model.ServicesHeaders.First() ? "active" : "fade")" id="@header.Id">
                    @foreach (var item in Model.ServicesBodies.Where(b => b.ServicesHeaderId == header.Id))
                    {
                        <div class="single-tab-content">
                            <div class="row">
                                <div class="col-lg-6 col-md-12 col-sm-12">
                                    <div class="img-box">
                                        <img src="~/uploads/images/@item.ImagePath" alt="" />
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-12 col-sm-12">
                                    <div class="content">
                                        <div class="title">@item.Title</div>
                                        <div class="text">
                                            <p>
                                                @item.Text
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</section>
<!-- service-section end -->