@model RadissonHotel


<section class="about-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12 col-sm-12">
                <div class="about-content">
                    <div class="sec-title left">@Model.Title</div>
                    <div class="text">
                        @Html.Raw(Model.Text)
                    </div>
                    <div class="text">
                        @Model.FullText
                    </div>
                    <div class="link">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12 col-sm-12 clearfix">
                <div class="img-box">
                    <figure class="img-three wow zoomIn animated">
                        <img class="r-img" src="~/uploads/images/@Model.ImagePath" alt="" />
                    </figure>
                </div>
            </div>
        </div>
    </div>
</section>

