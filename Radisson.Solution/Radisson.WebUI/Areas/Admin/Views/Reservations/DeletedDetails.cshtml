@model Reservation

@{
    ViewData["Title"] = "DeletedDetails";
}

<h1>Detallı</h1>

<h4>Keçmiş Rezervasiyalar</h4>
<hr />

<div class="page-wrapper">
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <div class="d-inline">
                        <h4>Bootstrap Border Sizes</h4>
                        <span>
                            lorem ipsum dolor sit amet, consectetur adipisicing
                            elit
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                        <li class="breadcrumb-item" style="float: left;">
                            <a asp-controller="Dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                        </li>
                        @if (User.HasAccess("admin.reservations.deletedindex"))
                        {
                            <li class="breadcrumb-item" style="float: left;">
                                <a asp-action="deletedindex">Keçmiş Rezervasiyalar</a>
                            </li>
                        }
                        <li class="breadcrumb-item" style="float: left;">
                            <span>Detallı</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Basic Form Inputs</h5>
                        <span>
                            Add class of <code>.form-control</code> with
                            <code>&lt;input&gt;</code> tag
                        </span>


                        <div class="card-header-right">
                            <i class="icofont icofont-spinner-alt-5"></i>
                        </div>

                    </div>
                    <div class="card-block">
                        <h4 class="sub-title">Basic Inputs</h4>

                        <div>
                            <div class="form-group row ">
                                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                                <div class="fix-row">
                                    @Model.Name
                                </div>
                            </div>
                            <div class="form-group row ">
                                <label asp-for="Surname" class="col-sm-2 col-form-label"></label>
                                <div class="fix-row">
                                    @Model.Surname
                                </div>
                            </div>
                            <div class="form-group row ">
                                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                                <div class="fix-row">
                                    @Html.Raw(Model.Email)
                                </div>
                            </div>
                            <div class="form-group row ">
                                <label asp-for="CheckIn" class="col-sm-2 col-form-label"></label>
                                <div class="fix-row">
                                    @Model.CheckIn
                                </div>
                            </div>
                            <div class="form-group row ">
                                <label asp-for="CheckOut" class="col-sm-2 col-form-label"></label>
                                <div class="fix-row">
                                    @Model.CheckOut
                                </div>
                            </div>
                            @if (Model.RoomId != null)
                            {
                                <div class="form-group row ">
                                    <label asp-for="RoomId" class="col-sm-2 col-form-label"></label>
                                    <div class="fix-row">
                                        Nömrə @ViewBag.GetRNumber(Convert.ToInt32(Model.RoomId))
                                    </div>
                                </div>
                            }
                            <div class="form-group row ">
                                <label asp-for="RoomTypeId" class="col-sm-2 col-form-label"></label>
                                <div class="fix-row">
                                    @ViewBag.GetRTName(Model.RoomTypeId)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="PeopleCloud" class="col-sm-2 col-form-label">Əlavə Qonaqlar </label>
                                <div class="fix-row">
                                    <ul style="margin-top:1px">
                                        @foreach (var item in Model.PeopleCloud.Select(tc => tc.People))
                                        {
                                            <li class="fix-row">@item.Text</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                            <div class="form-group row ">
                                <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                                <div class="fix-row">
                                    @Model.Price AZN
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-12 d-flex justify-content-end">
                                    @if (User.HasAccess("admin.reservations.deletedindex"))
                                    {
                                        <a asp-action="DeletedIndex" class="btn btn-info">Cancel</a>

                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



