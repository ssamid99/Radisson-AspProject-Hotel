@model IEnumerable<BlogPost>

<section class="news-section sec-pad">
    <div class="container">
        <div class="top-title clearfix">
            <div class="sec-title">Son Postlar</div>
            <div class="top-link"><a asp-controller="blogposts" asp-action="index">Daha Çox Post</a></div>
        </div>
        <div class="row">
            @foreach(var item in Model){
            <div class="col-lg-4 col-md-6 col-sm-12 news-column">
                <div class="single-item">
                    <div class="image">
                            <img src="~/uploads/images/@item.ImagePath" alt="" />
                        <div class="overlay">
                            <div class="overlay-content">
                                <div class="content">
                                        <a class="link-btn" asp-controller="blogposts" asp-action="details" asp-route-id="@item.Id" asp-route-slug="@item.Slug">
                                        <i class="fa fa-link"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="lower-content">
                        <h3>
                                <a asp-controller="blogposts" asp-action="details" asp-route-id="@item.Id" asp-route-slug="@item.Slug">@item.Title</a>
                        </h3>
                        <ul class="meta-content">
                                <li>paylaşıldı: <a href="#">@item.CreatedByUser?.Name</a></li>
                                <li>tarix: <span>@item.PublishedDate?.ToString("MMM dd, yyyy")</span></li>
                        </ul>
                        <div class="text ellipse">
                            @Html.Raw(item.Body)
                        </div>
                        <div class="link">
                                <a asp-controller="blogposts" asp-action="details" asp-route-id="@item.Id" asp-route-slug="@item.Slug" class="theme-btn-three">Ətraflı Oxu</a>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</section>
